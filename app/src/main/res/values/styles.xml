<!--suppress AndroidDomInspection -->
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/toolbar_bgr</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/toolbar_title_color</item>
    </style>

    <style name="LoadingView">
        <item name="android:layout_width">@dimen/splash_loading_size</item>
        <item name="android:layout_height">@dimen/splash_loading_size</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="MovieItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_brightest_gray</item>
    </style>

    <style name="MovieDetails_SectionHeadline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_brightest_gray</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="MovieDetails_ProductInfo_Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/text_brightest_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MovieDetails_ProductInfo_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_bright_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ContentRating">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/content_rating_bgr</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieTabItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="DetailsPoster">
        <item name="android:layout_width">@dimen/movie_details_poster_width</item>
        <item name="android:layout_height">@dimen/movie_details_poster_height</item>
        <item name="android:background">#414141</item>
        <item name="android:padding">1dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>
