<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/movie_details_section_spacing"
    android:background="@color/media_details_section_bgr"
    android:paddingBottom="@dimen/movie_details_content_padding"
    android:paddingTop="@dimen/movie_details_content_padding">

    <TextView
        android:id="@+id/tvSeasonLabel"
        style="@style/MovieDetails_SectionHeadline"
        android:paddingStart="@dimen/movie_details_content_padding"
        android:text="@string/label_season" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/movie_details_content_padding"
        android:text="@string/label_see_all"
        android:textColor="@color/text_bright_gray"
        android:textSize="@dimen/media_details_general_text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvSeasonLabel"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSeasonListing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_view_season_size"
        android:layout_marginTop="@dimen/movie_details_content_padding"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/movie_details_content_padding"
        android:paddingRight="@dimen/movie_details_content_padding"
        app:layout_constraintTop_toBottomOf="@id/tvSeasonLabel" />

</android.support.constraint.ConstraintLayout>