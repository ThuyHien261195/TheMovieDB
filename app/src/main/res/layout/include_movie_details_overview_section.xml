<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/movie_details_overview_bgr"
    android:orientation="vertical"
    android:padding="@dimen/movie_details_content_padding">

    <TextView
        android:id="@+id/vName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/text_white"
        android:textSize="27dp"
        tools:text="Avenger: Infinity War" />

    <TextView
        android:id="@+id/vTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_brighter_gray"
        android:textSize="@dimen/media_details_general_text_size"
        android:textStyle="italic"
        tools:text="This is tagline" />

    <TextView
        android:id="@+id/vPrimaryInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_brighter_gray"
        android:textSize="@dimen/media_details_general_text_size"
        tools:text="PG-13 | 2018 | 2h 31min | Action, Adventure, Fantasy" />

</LinearLayout>