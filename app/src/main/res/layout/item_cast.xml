<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivCastPic"
        android:layout_width="@dimen/movie_details_cast_pic_width"
        android:layout_height="@dimen/movie_details_cast_pic_height"
        android:background="#3A3A3A"
        android:padding="1dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvCastName"
        android:layout_width="@dimen/movie_details_cast_pic_width"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/text_brightest_gray"
        android:textSize="13dp"
        tools:text="Robert Downey Jr"/>

    <TextView
        android:id="@+id/tvCastCharacter"
        android:layout_width="@dimen/movie_details_cast_pic_width"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/text_bright_gray"
        android:textSize="11dp"
        tools:text="IronMan"/>

</LinearLayout>